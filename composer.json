{
    "name": "vocento/microservice-bundle",
    "type": "bundle",
    "license": "proprietary",
    "description": "Base bundle for Microservice projects",
    "keywords": [
        "bundle",
        "microservice"
    ],
    "authors": [
        {
            "name": "Ariel Ferrandini",
            "email": "aferrandini@vocento.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Vocento\\MicroserviceBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vocento\\MicroserviceBundle\\Tests\\": "tests/"
        }
    },
    "require": {
        "beberlei/assert": "~2.6",
        "symfony/symfony": "3.1.*",
        "vocento/request-id": "^1.0",
        "composer/semver": "~1.4"
    },
    "require-dev": {
        "matthiasnoback/symfony-dependency-injection-test": "^1.0",
        "phpunit/phpunit": "^5.0",
        "jms/serializer": "~1.1"
    },
    "config": {
        "bin-dir": "bin"
    },
    "suggest": {
        "jms/serializer": "Allows the usage of SerializerAwareControllerTrait to include some extra methods to the controllers."
    }
}
