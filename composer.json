{
    "name": "vocento/microservice-bundle",
    "type": "bundle",
    "license": "proprietary",
    "description": "Base bundle for Microservice projects",
    "keywords": [
        "bundle",
        "microservice"
    ],
    "authors": [
        {
            "name": "Ariel Ferrandini",
            "email": "aferrandini@vocento.com"
        },
        {
            "name": "Software Architecture Department",
            "email": "arquitectura@vocento.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Vocento\\MicroserviceBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Vocento\\MicroserviceBundle\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "beberlei/assert": "^3.0",
        "composer/semver": "^1.4",
        "monolog/monolog": "^1.2 || ^2.2",
        "symfony/framework-bundle": "^4.2 || ^4.3 || ^4.4",
        "vocento/request-id": "^1.1"
    },
    "require-dev": {
        "matthiasnoback/symfony-dependency-injection-test": "^3.1",
        "phpunit/phpunit": "^7.5",
        "jms/serializer": "~1.1"
    },
    "config": {
        "bin-dir": "bin"
    },
    "suggest": {
        "jms/serializer": "Allows the usage of SerializerAwareControllerTrait to include some extra methods to the controllers."
    }
}
